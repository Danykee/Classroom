@model ClassroomSE.Models.Grade

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GradeID" />
            <div class="form-group">
                <label asp-for="StudentGrade" class="control-label"></label>
                <input asp-for="StudentGrade" class="form-control" />
                <span asp-validation-for="StudentGrade" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Participation" /> @Html.DisplayNameFor(model => model.Participation)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentID" class="control-label"></label>
                <select asp-for="AssignmentID" class="form-control" asp-items="ViewBag.AssignmentID"></select>
                <span asp-validation-for="AssignmentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
